<h1 id="banner">Welcome, <%= @user.username %></h1>
<br />
<br />
<hr />
<br />
<ul id="ideas">
  <% @user.ideas.each do |idea| %>
      <li>Title: <%= idea.title %></li>
      <li>Description: <%= idea.description %></li>
      <li>Category:  <%= idea.category.name %> </li>
  <% end %>
</ul>
<div id="new_idea">
  <%= render partial: 'shared/idea_form', locals: {idea: @user.ideas.new,
                                                   user_id: @user.id} %>
</div>
