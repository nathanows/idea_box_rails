<%= bootstrap_form_for(idea, :layout => :horizontal) do |f| %>
  <%= f.text_field     :title %>
  <%= f.text_area      :description %>
  <%= f.collection_select(:category_id, Category.all, :id, :name) %>
  <%= f.collection_select(:images, Image.all, :id, :title, {}, {:multiple => true}) %>
  <%= f.hidden_field   :user_id %>
  <%= f.submit         "Create Idea" %>
<% end %>
